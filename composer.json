{
    "name": "lennon-mudenda/omnipay-dpo",
    "description": "DPO Payments driver for the Omnipay PHP payment processing library",
    "keywords": [
        "lennon-mudenda",
        "omnipay-dpo"
    ],
    "homepage": "https://github.com/lennon-mudenda/omnipay-dpo",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lennon Mudenda",
            "email": "lensig13@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "dpo/dpo-pay-common": "^1.0",
        "nyholm/psr7": "^1.8",
        "omnipay/common": "^3",
        "php-http/httplug": "^2.4",
        "symfony/http-client": "^6.0",
        "vlucas/phpdotenv": "^5.6",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\DPO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\DPO\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
