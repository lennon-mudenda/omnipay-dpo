{
    "name": "lennon-mudenda/omnipay-dpo",
    "description": "DPO Payments driver for the Omnipay PHP payment processing library",
    "keywords": [
        "lennon-mudenda",
        "omnipay-dpo"
    ],
    "homepage": "https://github.com/lennon-mudenda/omnipay-dpo",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lennon Mudenda",
            "email": "lensig13@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "LennonMudenda\\OmnipayDpo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LennonMudenda\\OmnipayDpo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
